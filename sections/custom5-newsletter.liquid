{% schema %}
{
  "name": "Custom Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "icon_name",
      "label": "Icon Name (e.g., 'arrow-right')",
      "info": "Use a valid icon name from the Dawn theme's icon library."
    }
  ],
  "presets": [
    {
      "name": "Custom Newsletter"
    }
  ]
}
{% endschema %}

<div class="custom-newsletter">
  <form action="#" method="post" class="newsletter-form">
    <input type="email" name="email" placeholder="Enter your email" required>
    <button type="submit">
      {% if section.settings.icon_name != blank %}
        <span class="icon">{{ section.settings.icon_name }}</span>
      {% endif %}
      {{ section.settings.button_text }}
    </button>
  </form>
</div>

<style>
  .custom-newsletter {
    text-align: center;
    padding: 20px;
  }
  .newsletter-form {
    display: flex;
    justify-content: center;
    gap: 10px;
  }
  .newsletter-form input {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  .newsletter-form button {
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
  .icon {
    margin-right: 8px;
  }
</style>